{
  "name": "@tzc/ui",
  "version": "1.0.0",
  "description": "Radix UI-based React component library with Tailwind styles",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/ui.js",
  "module": "dist/ui.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:css && microbundle --tsconfig tsconfig.json",
    "build:css": "tailwindcss -c tailwind.config.cjs -i src/styles.css -o dist/styles.css --minify",
    "clean": "rimraf dist"
  },
  "keywords": [
    "react",
    "ui",
    "components",
    "radix-ui",
    "tailwind"
  ],
  "author": "laotang",
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "dependencies": {
    "@radix-ui/react-label": "^2.1.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@radix-ui/react-switch": "^1.1.0",
    "@radix-ui/react-icons": "^1.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "microbundle": "^0.15.1",
    "postcss": "^8.4.47",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.14",
    "typescript": "^5.6.3"
  },
  "microbundle": {
    "jsx": "React.createElement",
    "jsxFragment": "React.Fragment"
  }
}
